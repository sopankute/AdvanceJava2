<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
  
  <hibernate-mapping>
  	<class name="com.hibernate.entities.ElectronicsProduct" table="electronics_product" 
  		dynamic-insert="true" dynamic-update="true">
  		<id name="id" column="p_id">
<!--  			<generator class="increment"></generator>-->
  		</id>
  		
  		<property name="name" column="p_name"></property>
  		<property name="quantity" column="p_quantity"></property>
  		<property name="price" column="p_price"></property>
  	</class>
  
  </hibernate-mapping>
  